{
    "name": "digbang/money",
    "description": "Money PHP bridge for Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Darío Govergun",
            "email": "dgovergun@digbang.com"
        },
        {
            "name": "Juan Falcón",
            "email": "jfalcon@digbang.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "moneyphp/money": "^3.0",
        "laravel/framework": "5.4.*|5.5.*",
        "laravel-doctrine/fluent": "^1.1",
        "laravel-doctrine/orm": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "mockery/mockery": "^0.9.9"
    },
    "suggest": {
        "moneyphp/money": "Work with money safer, easier, and fun!"
    },
    "autoload": {
        "psr-4": {
            "Digbang\\Money\\": "src/",
            "Tests": "tests/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Digbang\\Utils\\": "tests/"
        }
    }
}
